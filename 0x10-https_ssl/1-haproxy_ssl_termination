frontend http_front
    bind *:80
    default_backend http_back
frontend www-http
    bind *:80
    redirect scheme https code 301 if !{ ssl_fc }
frontend www-https
    bind *:443 ssl crt /etc/letsencrypt/live/www.anassch.tech/fullchain.pem
    reqadd X-Forwarded-Proto:\ https
    default_backend www-backend
backend www-backend
    mode http
    balance roundrobin
    server 531338-web-01 54.197.21.225:80 check
    server 531338-web-02 3.84.158.60:80 check
